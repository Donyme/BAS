<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="model">
<class name="SalesDayItem" table="sales_item">
	<id name="salesItemId" column="item_id">
	<generator class="native"></generator>
	</id>
	<property name="copiesSold" column="copiesSold"></property>
	<many-to-one name="book" class="Book" column="ISBN"></many-to-one>
	</class>
	
</hibernate-mapping>